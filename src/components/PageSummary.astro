---
const { content } = Astro.props;
---

<section id={content.title} class="bg-accent-600 py-12 lg:py-24">
  <div
    class="flex items-center justify-center gap-6 flex-col lg:flex-row px-6 lg:px-8 max-w-6xl mx-auto"
  >
    <div class="">
      <h2
        class="mt-2 text-3xl w-full font-bold text-white md:text-4xl lg:text-5xl text-center lg:text-right"
        set:html={content.title}
      />
    </div>
    <div
      class="font-light text-sm max-w-1/3 lg:text-base leading-tight text-white text-center lg:text-left"
    >
      {
        content.paragraphs &&
          content.paragraphs.map((paragraph) => (
            <p class="mb-2 px-8 lg:px-2" set:html={paragraph} />
          ))
      }
    </div>
  </div>
</section>
